<%= form_for @mark, :remote => true, :url => {:controller => 'kpi_marks', :action =>'update_plan', :id => @mark.id}, :html => {:method => :post} do |f| %>

<%= f.hidden_field :i, :value => params[:i] %>
<p><%= f.text_field :plan_value, :required => true, :label => l(:kpi_indicator_name_label), :class => 'numeric fact_value' %></p>
<%= submit_tag l(:button_save) %>
<% end %>

<script>
	
	jQuery('#kpi_mark_plan_value').focus();
  numeric_value(jQuery('#kpi_mark_plan_value'));
</script>
